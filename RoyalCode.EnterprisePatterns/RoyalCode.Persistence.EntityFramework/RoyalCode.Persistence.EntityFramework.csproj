<Project Sdk="Microsoft.NET.Sdk">

	<Import Project="..\base.targets" />

	<PropertyGroup>
		<TargetFrameworks>net5;net6</TargetFrameworks>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<Version>1.0.0-preview1</Version>
		<AssemblyVersion>1.0.0</AssemblyVersion>
		<FileVersion>1.0.0</FileVersion>
		<Description>
			Persistence components implementation with EntityFrameworkCore,
			including the Repository Pattern, Unit of Work, Searchable, Filters and Specifiers.
		</Description>
		<PackageTags>
			RoyalCode Enterprise-Patterns Repository Repository-Pattern Searchable Search
			UoW Unit-Of-Work Unit-Of-Work-Pattern Filter-Specifier-Pattern
		</PackageTags>
	</PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6'">
	  <PackageReference Include="Microsoft.EntityFrameworkCore">
	    <Version>6.0.0</Version>
	  </PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net5'">
		<PackageReference Include="Microsoft.EntityFrameworkCore">
			<Version>5.0.0</Version>
		</PackageReference>
	</ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\RoyalCode.Persistence.Searches.Abstractions\RoyalCode.Persistence.Searches.Abstractions.csproj" />
        <ProjectReference Include="..\RoyalCode.Repositories.Abstractions\RoyalCode.Repositories.Abstractions.csproj" />
		<ProjectReference Include="..\RoyalCode.UnitOfWork.Abstractions\RoyalCode.UnitOfWork.Abstractions.csproj" />
		<ProjectReference Include="..\RoyalCode.Aggregates\RoyalCode.Aggregates.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="RoyalCode.EventDispatcher">
        <Version>1.0.0-rc1</Version>
      </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Events\DomainEventResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>DomainEventResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="UnitOfWork\UnitOfWorkResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>UnitOfWorkResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Events\DomainEventResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>DomainEventResources.resx</DependentUpon>
      </Compile>
      <Compile Update="UnitOfWork\UnitOfWorkResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>UnitOfWorkResources.resx</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
